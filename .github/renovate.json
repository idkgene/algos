{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
      "config:base"
    ],
    "packageRules": [
      {
        "matchUpdateTypes": ["minor", "patch"],
        "matchCurrentVersion": "!/^0/",
        "automerge": true
      }
    ],
    "labels": ["dependencies"],
    "prHourlyLimit": 4,
    "timezone": "UTC",
    "dependencyDashboard": true,
    "semanticCommits": "enabled"
  }
